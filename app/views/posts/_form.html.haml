= form_for(@post) do |f|
    - if @post.errors.any?
        #error_explanation
            %h2= pluralize(@post.errors.count, "error") + "prohibited this post from being saved:"

            %ul
                - @post.errors.full_messages.each do |msg|
                    %li= msg

    %p Enter a title and link or body. Use body for self posts; it is ignored when a link is provided.
    %p
        = f.label :title
        %br/
        = f.text_field :title
    %p
        = f.label :link
        %br/
        = f.text_field :link
    %p
        = f.label :body
        %br/
        = f.text_area :body
    %p= f.submit